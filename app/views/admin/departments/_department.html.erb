<div id="<%= dom_id department %>">
  <div class="mt-2 ">
  <p class="my-5">
    <strong class="block mb-1 text-xl uppercase text-center font-bold underline ">
    <%= department.name %>
    </strong>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 font-bold">Description</strong>
    <%= department.description %>
  </p>
  </div>

  <% if action_name != "show" %>
    <%= link_to "Show", [:admin, department], class: "rounded-lg py-3 mt-2 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit", edit_admin_department_path(department), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
