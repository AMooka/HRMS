<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-xl">Departments</h1>
    <div class=" justify-center items-center hover:bg-blue-500">
          <%= link_to new_admin_department_path do %>
            <span class="px-1 bg-sky-600 text-white px-2 py-1 rounded-sm hover:bg-blue-700 justify-center items-cente">
            <%= icon('fa-solid', 'plus', class: "")%> New</span>
          <% end %>
      </div>
  </div>

  <div class="items-center block w-auto max-h-screen overflow-auto h-sidenav grow basis-full">
    <div class="w-full py-6 mx-auto">
      <div class="flex-auto px-0 pt-0 pb-2">
                <div class="p-0 overflow-x-auto">
                  <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                    <thead class="align-bottom">
                      <tr class="bg-blue-950 text-sm">
                        <th class="px-2 py-2 pl-2 font-bold text-left align-middle border-b border-gray-200 shadow-none border-b-solid tracking-none whitespace-nowrap text-white">Name</th>
                        <th class="px-2 py-2 pl-2 font-bold text-left align-middle border-b border-gray-200 shadow-none border-b-solid tracking-none whitespace-nowrap text-white">Description</th>
                        <th class="px-2 py-2 pl-2 font-bold text-left align-middle border-b border-gray-200 shadow-none border-b-solid tracking-none whitespace-nowrap text-white">Employes</th>
                      </tr>
                    </thead>

                    <% @admin_departments.each do |d|%>
                    <tbody class="text-sm">
                      <tr>
                        <td class="align-middle text-left bg-transparent border-b whitespace-nowrap shadow-transparent">
                          <%= link_to d.name, admin_department_path(d)%>
                        </td>
                        <td class="align-middle text-left bg-transparent border-b whitespace-nowrap shadow-transparent">
                          <%= truncate(d.description, length:50) %>
                        </td>

                        <td class="align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                          <%= @employee_count %>
                        </td>
                      </tr>
                    </tbody>
                    <% end %>
                  </table>
                </div>
              </div>
    </div>
  </div>
</div>
