<%= link_to admin_departments_path do %>
      <span class="px-2 py-1 rounded-sm text-black hover:text-red-500 justify-center items-center">
      <%= icon('fa-solid', 'angle-left', class: "")%> Back</span>
<% end %>

<div class="mx-auto md:w-11/12 w-full flex border px-3 py-4">
  <div class="">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_department %>

    <div class=" justify-center items-center inline-block mt-2">
    <div class="inline">
          <%= link_to edit_admin_department_path(@admin_department) do %>
            <span class="text-blue-500 px-2 py-1 rounded-sm hover:text-blue-700 justify-center items-center">
            <%= icon('fa-solid', 'pen', class: "")%> Edit</span>
          <% end %>
    </div>
    <div class="inline-block">
            <%= button_to admin_department_path(@admin_department), method: :delete do %>
            <span class="text-red-500 px-2 py-1 rounded-sm hover:text-red-800 justify-center items-center">
            <%= icon('fa-solid', 'trash', class: "")%> Remove</span>
            <% end %> 
    </div>
      </div>
  </div>
</div>
