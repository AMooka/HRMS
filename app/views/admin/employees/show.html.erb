<%= link_to admin_employees_path do %>
<span class="text-black px-2 py-1 rounded-sm hover:text-red-700 justify-center items-center"><%= icon('fa-solid', 'angle-left')%> Back</span>
<% end %>
<div class="mx-auto md:w-11/12 border w-full flex">
  <div class="px-5 py-2">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_employee %>

    <%= link_to  edit_admin_employee_path(@admin_employee) do %>
      <span class="text-blue-500 px-2 py-1 rounded-sm hover:text-blue-700 justify-center items-center">
            <%= icon('fa-solid', 'pen', class: "")%> Edit</span>
    <% end %>

    <%= link_to admin_employee_path(@admin_employee), method: :delete do %>
      <span class="text-red-500 px-2 py-1 rounded-sm hover:text-red-800 justify-center items-center">
      <%= icon('fa-solid', 'trash', class: "")%> Remove</span>
    <% end %>

  </div>
</div>
