<div class="md:w-11/12 mx-auto">
<p class="font-xl font-bold">Applicant Details</p>
<div class="text-sm grid md:grid-cols-2 mt-12">
<div>
<div>
<label class="font-bold">Name: </label>
<%= @job_application.name%>
</div>

<div class="mt-3">
<label class="font-bold">Email: </label>
<%= @job_application.email%>
</div>

<div class="mt-3">
<label class="font-bold">Telephone Number: </label>
<%= @job_application.tel_no%>
</div>


<div class="mt-3">
<label class="font-bold mt-3">Location: </label>
<%= @job_application.location%>
</div>

<div class="mt-3">
<label class="font-bold">Email: </label>

</div>

<div class="mt-3">
<label class="font-bold">Position Applied for: </label>
<%= @job_application.job.title %>Position
</div>
</div>

<div>
<div class="flex-col mt-3">
<label class="font-bold mt-2">Cover Letter: </label>
<section>
<%= @job_application.cover_letter%>
</section>
</div>

<div class="flex-col mt-4">
<label class="font-bold">Resume: </label>
<section class="mt-2">
<%= link_to rails_blob_path(@resume_URL, disposition: "attachment"), class: "text-white py-1 px-3 bg-orange-500 rounded-sm" do %>
    <%= icon('fa-solid', 'file-arrow-down') %><span> Resume/CV</span>
<% end %>

</section>
</div>
</div>
</div>
</div>