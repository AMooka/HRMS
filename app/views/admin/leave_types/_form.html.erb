<%= form_with(model: [:admin, admin_leave_type], class: "contents") do |form| %>
  <% if admin_leave_type.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(admin_leave_type.errors.count, "error") %> prohibited this admin_leave_type from being saved:</h2>

      <ul>
        <% admin_leave_type.errors.each do |error| %>
