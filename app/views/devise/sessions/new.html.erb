<div class="mx-auto w-full px-4">
<div class="border border-gray-500 mt-20 rounded-md w-full md:w-3/4 mx-auto lg:w-1/2 xl:w-1/3">
<section class=" bg-sky-700 text-center py-2">
<h2 class="mb-2 font-bold text-white">Log in</h2>
</section>

<section class="p-8">
<% if link_to admin_path %>
  <%=link_to employee_path, class: "text-blue-500 w-[100px] inline-flex justify-center rounded-lg lg:block" do %>
   <p>Employee</p>
  <% end %>
<%else%>
  <%=link_to admin_path, class: "text-blue-500 inline-flex justify-center rounded-lg lg:block" do %>
   <p>Log in as Admin</p>
  <% end %>
<% end %>
<!--notification and alert-->
  <section class="center text-red-500 text-center">
    <p class="alert"><%= alert %></p>
  </section>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-sm border-b border-gray-500 mt-1 w-full" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "rounded-sm border-b border-gray-500 mt-1 w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "text-white mt-2 bg-green-500 py-2 w-full cursor-pointer hover:bg-green-800"%>
  </div>
<% end %>
</section>
</div>
<%#= render "devise/shared/links" %>
</div>
