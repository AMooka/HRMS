<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col items-center">
  <p class="text-2xl font-bold">Select the Report Type <span class="text-slate-400">ie: weekly or monthly</span></p>

    <div class="flex-col flex mt-4">
      <%= link_to new_employee_emp_appraisal_path, class:"bg-blue-500 px-3 py-1 rounded-sm text-white hover:bg-blue-700" do%>
      <span>Weekly</span>
      <% end %>

      <%= link_to new_employee_emp_appraisal_path, class:"bg-orange-500 mt-2 px-3 py-1 rounded-sm text-white hover:bg-orange-700" do%>
      <span>Monthly</span>
      <% end %>  
    </div>
   </div>
</div>
