<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="items-center block w-auto max-h-screen overflow-auto h-sidenav grow basis-full border-t mt-3">
    <div class="w-full py-2 mx-auto">
        <section class="items-center text-center md:px-20 py-3">
        <% if @jobs != 0 %>
            <h1 class="font-bold">We are Hiring!</h1>
            <p class="font-medium">Join our growing distributed team and make an impact on millions of users</p>
        </section>
      <div class="flex-auto px-0 pt-0 pb-2">
            <div class="p-0 overflow-x-auto">
                <table class="min-w-full text-left text-sm font-light text-surface dark:text-white">
                    <thead
                        class="border-b border-neutral-200 bg-white font-medium dark:border-white/10 dark:bg-body-dark">
                        <tr>
                        <th scope="col" class="px-6 py-4">No</th>
                        <th scope="col" class="px-6 py-4">Job</th>
                        <th scope="col" class="px-6 py-4">Gender</th>
                        <th scope="col" class="px-6 py-4">Age</th>
                        <th scope="col" class="px-6 py-4">Posted on</th>
                        <th scope="col" class="px-6 py-4">Deadline</th>
                        <th scope="col" class="px-6 py-4">Location</th>
                        <th scope="col" class="px-6 py-4">View</th>
                        </tr>
                    </thead>
                    <% count = 0 %>
                    <% @jobs.each do |jobs|%>
                    <tbody>
                        <tr class="border-b border-neutral-200 bg-black/[0.02] dark:border-white/10">
                        <td class="whitespace-nowrap px-6 py-4 font-medium">
                            <%= count += 1 %>
                        </td>
                        <td class="whitespace-nowrap px-6 py-4"><%= jobs.title%></td>
                        <td class="whitespace-nowrap px-6 py-4"><%= jobs.gender%></td>
                        <td class="whitespace-nowrap px-6 py-4">18-28</td>
                        <td class="whitespace-nowrap px-6 py-4"><%= jobs.posting_date%></td>
                        <td class="whitespace-nowrap px-6 py-4"><%= jobs.expiry_date%></td>
                        <td class="whitespace-nowrap px-6 py-4"><%= jobs.location%></td>
                        <td class="whitespace-nowrap px-6 py-4">
                        <%= link_to job_path(jobs), class: "py-1 px-2 bg-green-500 text-white" do%>
                            <span>View</span>
                        <% end %>
                        </td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
    <% else %>
    <p>No Vacancies found</p>
    <% end %>
</div>