<div class="flex-col w-full mt-4">
<div class="w-11/12 bg-gray-100 mx-auto mt-4">
    <div class="p-3 text-sm"> 
    <section class=" text-xl justify-center items-center">
    <h1 class="font-bold">
    <%= @job.title%>
    </h1>
    <p class="font-md text-sm">Posted on: <%= @job.posting_date %> <span class="text-red-500">Expiry date: <%= @job.expiry_date %></span></p>
    </section>
    
    <section class="mt-3">
    <h1 class="font-bold">Description:</h1>
    <%= @job.description%>
    </section>
    
    <section class="mt-3">
    <h1 class="font-bold">Roles:</h1>
    <%= @job.roles%>
    </section>

    <section class="mt-3">
    <h1 class="font-bold">Requirements:</h1>
    <%= @job.requirements%>
    </section>
    <section class="mt-5">
    <%= link_to "Apply", job_applications_new_path(@job), class: "bg-green-500 text-white py-2 px-3"%>
    </section>
    </div>
</div>
</div>